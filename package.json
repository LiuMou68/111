{
  "name": "membership-certificate-management-system",
  "version": "1.0.0",
  "description": "社团证书管理系统 - 基于区块链的证书管理平台",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prestart": "npm install",
    "start:frontend": "npx vite",
    "start:backend": "node services/server.js",
    "node": "npx hardhat node",
    "deploy": "npx hardhat run --network localhost scripts/deploy.js",
    "start:all": "npx concurrently \"npm run start:backend\" \"npm run node\" \"npm run start:frontend\"",
    "start:blockchain": "npx hardhat node",
    "start:all:win": "start cmd /k npm run start:blockchain && start cmd /k npm run start:frontend && start cmd /k \"timeout /t 10 && npm run deploy && npm run start:backend\"",
    "init:db": "scripts\\init-database.bat",
    "create:symlink": "scripts\\create-symlink.bat",
    "start:via-symlink": "scripts\\start-via-symlink.bat",
    "move:project": "scripts\\move-project.bat",
    "setup:blockchain": "npx hardhat compile && npm run deploy",
    "deploy:contracts": "npm run deploy",
    "postinstall": "node scripts/check-platform.js",
    "stop": "关闭服务.bat",
    "fix:port": "scripts\\fix-port.bat",
    "fix:rollup": "scripts\\fix-rollup-improved.bat",
    "fix:complete": "scripts\\彻底修复rollup.bat",
    "fix": "一键修复.bat",
    "generate:samples": "node scripts/generate-sample-certificates.js",
    "update:database": "scripts\\update-database-simple.bat",
    "update:database:ps1": "powershell -ExecutionPolicy Bypass -File scripts\\update-database.ps1",
    "check:database": "scripts\\check-database-tables.bat",
    "check:database:ps1": "powershell -ExecutionPolicy Bypass -File scripts\\check-database-tables.ps1",
    "update:certificate-image": "scripts\\update-certificate-image.bat",
    "update:auto-issue": "scripts\\update-auto-issue-certificate.bat",
    "deploy:points-certificate": "npx hardhat run scripts/deploy-points-certificate.js --network localhost",
    "setup:blockchain-env": "powershell -ExecutionPolicy Bypass -File scripts\\setup-blockchain.ps1",
    "deploy:all": "powershell -ExecutionPolicy Bypass -File scripts\\deploy-and-setup.ps1"
  },
  "keywords": [
    "blockchain",
    "certificate",
    "membership",
    "management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@truffle/contract": "^4.6.31",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "element-plus": "^2.9.10",
    "express": "^4.21.2",
    "form-data": "^4.0.0",
    "framer-motion": "^12.9.2",
    "gsap": "^3.12.7",
    "html2canvas": "^1.4.1",
    "ipfs-http-client": "^60.0.1",
    "jspdf": "^2.5.2",
    "md5": "^2.3.0",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.14.0",
    "node-fetch": "^2.7.0",
    "qrcode.react": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.4.0",
    "three": "^0.176.0",
    "three-stdlib": "^2.35.16",
    "web3": "^4.6.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "hardhat": "^2.22.1",
    "vite": "^5.1.6"
  },
  "directories": {
    "test": "test"
  }
}
